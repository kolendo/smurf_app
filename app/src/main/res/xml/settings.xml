<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory android:title="@string/settings_account">

        <Preference
            android:key="@string/settings_preference_username"
            android:selectable="false"
            android:title="@string/settings_username"
            android:summary="Janusz B" />

        <Preference
            android:key="@string/settings_preference_log_in"
            android:selectable="true"
            android:title="@string/settings_log_out" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_general">

        <Preference
            android:key="@string/settings_preference_search_radius"
            android:selectable="true"
            android:summary="300 km"
            android:title="@string/settings_search_radius" />

    </PreferenceCategory>

</PreferenceScreen>